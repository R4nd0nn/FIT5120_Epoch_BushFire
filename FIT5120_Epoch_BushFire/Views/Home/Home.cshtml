    /* CHART-SKILLS STYLES
                –––––––––––––––––––––––––––––––––––––––––––––––––– */

        .mainrating .chart-skills {
            position: relative;
            width: 350px;
            height: 175px;
            overflow: hidden;
        }

        .chart-skills::before,
        .chart-skills::after {
            position: absolute;
        }

        .chart-skills::before {
            content: '';
            width: inherit;
            height: inherit;
            border: 45px solid rgba(211, 211, 211, .3);
            border-bottom: none;
            border-top-left-radius: 175px;
            border-top-right-radius: 175px;
        }

        .chart-skills::after {
            left: 50%;
            bottom: 10px;
            transform: translateX(-50%);
            font-size: 1rem;
            font-weight: 900;
            color: orangered;
        }

        .chart-skills li {
            position: absolute;
            top: 100%;
            left: 0;
            width: inherit;
            height: inherit;
            border: 45px solid;
            border-top: none;
            border-bottom-left-radius: 175px;
            border-bottom-right-radius: 175px;
            transform-origin: 50% 0;
            transform-style: preserve-3d;
            backface-visibility: hidden;
            animation-fill-mode: forwards;
            animation-duration: .4s;
            animation-timing-function: linear;
        }

            .chart-skills li:nth-child(1) {
                z-index: 4;
                border-color: green;
            }

            .chart-skills li:nth-child(2) {
                z-index: 3;
                border-color: yellow;
                animation-delay: .4s;
            }

            .chart-skills li:nth-child(3) {
                z-index: 2;
                border-color: darkorange;
                animation-delay: .8s;
            }

            .chart-skills li:nth-child(4) {
                z-index: 1;
                border-color: firebrick;
                animation-delay: 1.2s;
            }

        .chart-skills span {
            position: absolute;
            font-size: 15px;
            backface-visibility: hidden;
            animation: fade-in .4s linear forwards;
        }

        .chart-skills li:nth-child(1) span {
            top: 5px;
            left: 10px;
            color:green;
            transform: rotate(-21.6deg);
        }

        .chart-skills li:nth-child(2) span {
            top: 20px;
            left: 10px;
            color:yellow;
            transform: rotate(-79.2deg);
            animation-delay: .4s;
        }

        .chart-skills li:nth-child(3) span {
            top: 18px;
            left: 10px;
            color: darkorange;
            transform: rotate(-140.4deg);
            animation-delay: .8s;
        }

        .chart-skills li:nth-child(4) span {
            top: 10px;
            left: 10px;
            color: firebrick;
            transform: rotate(-180deg);
            animation-delay: 1.2s;
        }



    /* ANIMATIONS
                –––––––––––––––––––––––––––––––––––––––––––––––––– */
    @@keyframes rotate-one {
        100% {
            transform: rotate(21.6deg);
            /**
                     * 12% => 21.6deg
                     */
        }
    }

    @@keyframes rotate-two {
        0% {
            transform: rotate(21.6deg);
        }

        100% {
            transform: rotate(79.2deg);
            /**
                     * 32% => 57.6deg
                     * 57.6 + 21.6 => 79.2deg
                     */
        }
    }

    @@keyframes rotate-three {
        0% {
            transform: rotate(79.2deg);
        }

        100% {
            transform: rotate(140.4deg);
            /**
                     * 34% => 61.2deg
