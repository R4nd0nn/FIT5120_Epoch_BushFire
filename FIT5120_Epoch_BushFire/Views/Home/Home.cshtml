                     */
        }
    }

    @@keyframes rotate-four {
        0% {
            transform: rotate(140.4deg);
        }

        100% {
            transform: rotate(180deg);
            /**
                     * 22% => 39.6deg
                     * 140.4 + 39.6 => 180deg
                     */
        }
    }


    @@keyframes fade-in {
        0%, 90% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }
