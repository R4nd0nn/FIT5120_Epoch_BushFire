@model FIT5120_Epoch_BushFire.Models.GetNotifyUser

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MA28 Epoch - Staying safe in Bushes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css' rel='stylesheet' />
</head>
<body>
    <div class="navgation">
        <div class="container">
            <div class="row">
                <ul class="nav navbar-nav">
                    <li class="nav1">@Html.ActionLink("Home", "Home", "Home")</li>
                    <li class="nav2">@Html.ActionLink("Map", "Map", "Home")</li>
                    <li class="nav3">@Html.ActionLink("Explore", "Map", "Home")</li>
                </ul>
                <button id="gbn" style="width: 200px;height: 50px;font-family:Century Gothic;background:transparent;border-style:double;float:right;margin-top:6%">Get Bushfire Notification</button>
            </div>
        </div>
        <div id="myModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="close">&times;</span>
                    <h2>Get your Bushfire Notification <img src="~/Image/nitify.png" width="50" height="50" /></h2>
                </div>
                <div class="modal-body">
                    <h1>Your Information</h1>
                    @using (Html.BeginForm("Update", "GetNotifyUser"))
                    {
                        @Html.AntiForgeryToken()
                        <form action="Create" method="POST" style="align-self:center">
                            <label for="fname">Your First Name:</label>
                            <input type="text" id="Fname" name="Fname"><br><br>
                            <label for="lname">Your Last Name:</label>
                            <input type="text" id="lname" name="lname"><br><br>
                            <label for="adress">Your Address:</label>
                            <input type="text" id="adress" name="adress"><br><br>
                            <label for="eadress">Your Email Address:</label>
                            <input type="text" id="eadress" name="eadress"><br><br>
                            <input type="submit" value="Submit" />
                        </form>
                    }
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
        <script>
            var modal = document.getElementById("myModal");
            var btn = document.getElementById("gbn");
            var span = document.getElementsByClassName("close")[0];
            btn.onclick = function () {
                modal.style.display = "block";
            }
            span.onclick = function () {
                modal.style.display = "none";
            }
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>
        <style>
                       .modal-body input {
                width: 240px;
                border: none;
                border-bottom: 2px solid black;
            }

            label {
                width: 240px;
                display: inline-block;
            }

            .modal {
                padding-top: 100px; /* Location of the box */
                padding-left: 20%; /* Location of the box */
                width: 50%; /* Full width */
                height: 100%; /* Full height */
            }

            /* Modal Content */
            .modal-content {
                position: relative;
                background-color: #fefefe;
                margin: auto;
                padding: 0;
                border: 1px solid #888;
            }

            #getfirenotify {
                text-align: left;
            }

            .close {
                color: black;
                float: right;
                font-size: 28px;
                font-weight: bold;
            }

                .close:hover,
                .close:focus {
                    color: #000;
                    text-decoration: none;
                    cursor: pointer;
                }



            .modal-footer {
                padding: 2px 16px;
            }


        </style>

        <style>
            .navgation {
                /* The image used */
                background: url("/image/background.jpg");
                min-height: 380px;
                margin-right: 200px;
                margin-left: 200px;
                background-position: center;
                background-repeat: no-repeat;
                /* Needed to position the navbar */
                position: relative;
                font-family: 'Century Gothic';
            }

            .navbar-nav {
                margin-top: 70px;
                font-size: 30px;
            }

            .nav1 {
                margin-left: 5px;
            }

            .nav2 {
                margin-left: 20px;
            }

            .nav3 {
                margin-left: 35px;
            }

            .nav4 {
                font-size: 20px;
                position: relative;
                border-style: solid;
            }
        </style>
    </div>
    <div class="body-content">
        @RenderBody()
        <footer>
            <hr />
            <p>@DateTime.Now.Year - FIT5120 MA28 - Epoch</p>
        </footer>
        <style>
            footer {
                margin-top: 100px;
            }
        </style>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>


