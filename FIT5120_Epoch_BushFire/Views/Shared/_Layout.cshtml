@model FIT5120_Epoch_BushFire.Models.GetNotifyUser

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>MA28 Epoch - Staying safe in Bushes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel='icon' src="~/image/logo.png">
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css' rel='stylesheet' />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no">
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.2.0/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.2.0/mapbox-gl.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        #map {
            position: page;
            top: 0;
            bottom: 0;
            width: 100%;
            height: 500px;
        }
    </style>
</head>
<body>
    
        <div class="container-fluid">
            <div class="navgation">
                <div class="container">
                    <div class="row" style="width:100%;justify-content:center">
                        <ul class="nav navbar-nav">
                            <li class="nav1" style="color:white">@Html.ActionLink("Home", "Home", "Home")</li>
                            <li class="nav3" style="color:white">@Html.ActionLink("About Us", "About_Us", "Home")</li>
                        </ul>
                        <a href="https://fit5120ma28.ml">
                            <img src="~/Image/logo2.png.PNG" style="height:200px;margin-top:50px;margin-left:15%" />
                        </a>
                        <button id="gbn" style="width: 200px;height: 50px;font-family:Century Gothic;background:transparent;border-style:double;border-width:5px;float:right;margin-top:10%;color:white">Get Bushfire Notification</button>
                    </div>
                </div>

                <!--<div class="container-fluid;" style="text-align:center;font-family:'Times New Roman';font-size:50px;color:white;opacity:80%;width:100%;">
                Bushfire
                <marquee style="scroll-behavior:smooth;behavior:initial;"> burining the crops and farmers xxxxx.</marquee>
                <marquee style="scroll-behavior:smooth;behavior:initial;"> <img src="~/Image/logo.png" /></marquee>

            </div>-->
            </div>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <span class="close">&times;</span>
                        <h2>Get your Bushfire Notification <img src="~/Image/nitify.png" width="50" height="50" /></h2>
                    </div>
                    <div class="modal-body">
                        <h1>Your Information</h1>
                        @using (Html.BeginForm("Update", "GetNotifyUser"))
                        {
                            @Html.AntiForgeryToken()
                            <form action="Create" method="POST" style="align-self:center">
                                <label for="fname">Your First Name:</label>
                                <input type="text" id="Fname" name="Fname"><br><br>
                                <label for="lname">Your Last Name:</label>
                                <input type="text" id="lname" name="lname"><br><br>
                                <label for="adress">Your Address:</label>
                                <input type="text" id="adress" name="adress"><br><br>
                                <label for="eadress">Your Email Address:</label>
                                <input type="text" id="eadress" name="eadress"><br><br>
                                <input style="text-align:center" id="submit" type="submit" value="Submit" />
                            </form>
                        }
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
            <script>
                var modal = document.getElementById("myModal");
                var btn = document.getElementById("gbn");
                var span = document.getElementsByClassName("close")[0];
                btn.onclick = function () {
                    modal.style.display = "block";
                }
                span.onclick = function () {
                    modal.style.display = "none";
                }
                window.onclick = function (event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }
            </script>
            <style>
                #submit {
                    width: 80px;
                }

                .modal-body input {
                    width: 240px;
                    border: none;
                    border-bottom: 2px solid black;
                }

                label {
                    width: 240px;
                    display: inline-block;
                }

                .modal {
                    padding-top: 100px;
                    padding-left: 20%;
                    width: 50%;
                    height: 100%;
                }

                .modal-content {
                    position: relative;
                    background-color: #fefefe;
                    margin: auto;
                    padding: 0;
                    border: 1px solid #888;
                }

                #getfirenotify {
                    text-align: left;
                }

                .close {
                    color: black;
                    float: right;
                    font-size: 28px;
                    font-weight: bold;
                }

                    .close:hover,
                    .close:focus {
                        color: #000;
                        text-decoration: none;
                        cursor: pointer;
                    }

                .modal-footer {
                    padding: 2px 16px;
                }
            </style>

            <style>
                .navgation {
                    background: url("/image/main_background2.jpg");
                    background-position: top;
                    position: relative;
                    width: 100%;
                    min-height: 700px;
                    max-height: 700px;
                    background-repeat: no-repeat;
                    font-family: 'Century Gothic';
                    background-attachment: fixed;
                }

                .navbar-nav {
                    margin-top: 70px;
                    font-size: 30px;
                }

                .nav1 {
                    margin-left: 5px;
                }

                .nav2 {
                    margin-left: 20px;
                }

                .nav3 {
                    margin-left: 35px;
                }

                .nav4 {
                    font-size: 20px;
                    position: relative;
                    border-style: solid;
                }

                .nav li a {
                    margin-top: 50px;
                    color: white;
                }

                    .nav li a:hover {
                        background-color: black;
                    }
            </style>

        </div>
        <script>


        </script>

        <div class="body-content">
            @RenderBody()
            <footer>
                <hr />
                <p>@DateTime.Now.Year - FIT5120 MA28 - Epoch</p>
            </footer>
            <style>
                footer {
                    margin-top: 100px;
                    color: white;
                    text-align: center;
                }
            </style>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>

</html>


